
@model TLCKendo.Models.SearchModel

@{
    ViewBag.Title = "Index";
}
<script type="text/javascript">
    function onAdditionalData() {
        var category = $("#CategoryId").data("kendoMultiSelect").value();
        debugger;
        return {
            categoryId : category
            };
    }
</script>
<div class="row">
    <div class="col-md-6">
        <label>Category</label>
        @(Html.Kendo().MultiSelectFor(x => x.CategoryId)
                  .DataValueField("Id")
                  .DataTextField("Name")
                  .ClearButton(false)
                  .DataSource(source =>
                  {
                      source.Read(read =>
                      {
                          read.Action("GetCategoryList", "Home");
                      })
                          .ServerFiltering(false);
                  })
                  .MaxSelectedItems(1)
                  .HtmlAttributes(new { @class = "" }))
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        @(Html.Kendo().MultiSelect()
              .Name("Course2")
              .DataValueField("Id")
              .DataTextField("Name")
              .Placeholder("Select Course...")
              .ClearButton(false)
              .AutoBind(false)
              .DataSource(source =>
              {
                  source.Read(read =>
                  {
                      read.Action("GetCourseCodeList", "Home");
                  })
                      .ServerFiltering(true);
              })
              .MaxSelectedItems(1)
              .HtmlAttributes(new { @class = "" }))
        <p class="help-block">This one works fine and passes in the 'text' parameter for the user entered values.</p>
    </div>
    <div class="col-md-6">
        @(Html.Kendo().MultiSelectFor(x => x.CourseId)
              .DataValueField("Id")
              .DataTextField("Name")
              .Placeholder("Select Course...")
              .ClearButton(false)
              .AutoBind(false)
              .DataSource(source =>
              {
                  source.Read(read =>
                  {
                      read.Action("GetCourseCodeList", "Home").Data("onAdditionalData");
                  })
                      .ServerFiltering(true);
              })
              .MaxSelectedItems(1)
              .HtmlAttributes(new { @class = "" }))
        
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        @(Html.Kendo().MultiSelect()
                      .Name("Course3")
                      .DataValueField("Id")
                      .DataTextField("Name")
                      .Placeholder("Select Course...")
                      .ClearButton(false)
                      .AutoBind(false)
                      .DataSource(source =>
                      {
                          source.Read(read =>
                          {
                              read.Action("GetCourseCodeListV2", "Home", new {id = 24});
                          })
                              .ServerFiltering(true);
                      })
                      .MaxSelectedItems(1)
                      .HtmlAttributes(new { @class = "" }))
        <p class="help-block">This one has predefined Category filter.</p>
    </div>
</div>